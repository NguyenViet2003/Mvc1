@{
    ViewBag.Title = "Hóa Đơn";
}

<h2>Danh Sách Mặt Hàng</h2>

<table border="1">
    <thead>
        <tr>
            <th>Tên Hàng</th>
            <th>Số Lượng</th>
            <th>Đơn Giá</th>
            <th>Thành Tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var matHang in Model)
        {
            <tr>
                <td>@matHang.TenHang</td>
                <td>@matHang.SoLuong</td>
                <td>@matHang.DonGia</td>
                <td>@(matHang.SoLuong * matHang.DonGia)</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Tổng Tiền: </strong>@ViewBag.TongTien</p>

<br />
