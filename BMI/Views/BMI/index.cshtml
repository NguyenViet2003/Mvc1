@model BMI.Models.BMIModel 



@{

 ViewData["Title"] = "Tính chỉ số BMI";

}



<h2>Tính chỉ số BMI</h2>



<form method="post">

<div class="form-group">

 <label for="weight">Cân nặng (kg):</label>

<input type="number" step="0.1" class="form-control" id="weight" name="weight" asp-for="Weight" required>

<span asp-validation-for="Weight" class="text-danger"></span> @* Validation cho Weight *@

</div>


<div class="form-group">

 <label for="height">Chiều cao (m):</label>

<input type="number" step="0.01" class="form-control" id="height" name="height" asp-for="Height" required>

 <span asp-validation-for="Height" class="text-danger"></span> @* Validation cho Height *@



 </div>



 <button type="submit" class="btn btn-primary mt-2">Tính BMI</button>

</form>



@if (Model != null) 

{

<div class="mt-3">

 <h4>Kết quả:</h4>

 <p><strong>Chỉ số BMI:</strong> @Model.BMI</p>
 <p><strong>Phân loại:</strong> @Model.GetBMICategory()</p>

 </div>

}



@if (ViewBag.Message != null)

{

 <div class="alert alert-danger mt-3">
 @ViewBag.Message

</div>

}